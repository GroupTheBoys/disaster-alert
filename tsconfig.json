{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",                                 /* Specify ECMAScript target version */
    "lib": ["dom", "dom.iterable", "esnext"],           /* Specify library files to be included in the compilation */
    "allowJs": true,                                    /* Allow JavaScript files to be compiled */
    "skipLibCheck": true,                               /* Skip type checking of declaration files */
    "strict": true,                                     /* Enable all strict type-checking options */
    "noEmit": true,                                     /* Do not emit outputs */
    "esModuleInterop": true,                            /* Enables emit interoperability between CommonJS and ES Modules */
    
    /* Module Resolution Options */
    "module": "esnext",                                  /* Specify module code generation */
    "moduleResolution": "bundler",                      /* Specify module resolution strategy */
    "resolveJsonModule": true,                           /* Allow importing JSON modules */
    "isolatedModules": true,                             /* Ensure that each file can be safely transpiled without relying on other imports */
    
    /* JSX Options */
    "jsx": "preserve",                                   /* Specify JSX code generation mode */
    
    /* Incremental Compilation */
    "incremental": true,                                 /* Enable incremental compilation */
    
    /* Type Declaration Files */
    "typeRoots": ["./node_modules/@types", "./types"],   /* List of folders to include type declarations from */
    
    /* Path Mapping */
    "paths": {
      "@/*": ["./*"]                                     /* Alias for importing modules */
    },
    
    /* Plugins */
    "plugins": [
      {
        "name": "next"                                    /* Next.js TypeScript plugin */
      }
    ]
  },
  
  /* Specify which files to include in the compilation */
  "include": [
    "next-env.d.ts",                                     /* Next.js specific type declarations */
    "**/*.ts",                                           /* Include all TypeScript files */
    "**/*.tsx",                                          /* Include all TypeScript JSX files */
    ".next/types/**/*.ts"                                /* Include type declarations generated by Next.js */
  ],
  
  /* Specify which files or directories to exclude from the compilation */
  "exclude": [
    "node_modules"                                       /* Exclude node_modules directory */
  ]
}
